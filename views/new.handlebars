<div class="container mt-4">
  <div class="d-flex justify-content-center text-center">
    <div class="card" style="width: 450px;border:outset">
      <h5 class="card-header font-weight-bold">URL Shortener</h5>
      <div class="card-body">
        <i class="fas fa-link fa-7x" style="color:cadetblue;"></i>
        <h5 class=" mt-4">{{#if existMessage }}{{existMessage}} {{else}} Success!{{/if}} please use below link:</h5>
        <a id="copyTarget" href="{{url.urlShort}}" style="font-size: 20px;">{{url.urlShort}}</a>

      </div>
      <div class=" mb-3">
        <button id='btn' class="btn btn-primary" type="button" id="create-button" data-clipboard-target="#copyTarget"
          onclick="copy(this)">Copy</button>
      </div>
    </div>
  </div>
</div>