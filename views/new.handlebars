<div class="container mt-4">
  <div class="d-flex justify-content-center text-center mt-5">
    <div class="card mt-2" style="width: 450px; border:outset; height:450px">
      <h5 class="card-header font-weight-bold">URL Shortener</h5>
      <div class="card-body mt-3">
        <i class="fas fa-link fa-7x" style="color:cadetblue;"></i>
        <h5 class=" mt-4">{{#if existMessage }}{{existMessage}} {{else}} Success!{{/if}} please use below link:</h5>
        <a id="copyTarget" href="{{url.urlShort}}" style="font-size: 20px;">{{url.urlShort}}</a>
        <div class=" mt-3">
          <button id='btn' class="btn btn-primary" type="button" id="create-button" data-clipboard-target="#copyTarget"
            onclick="copy(this)" style="width: 100px;">Copy</button>
        </div>
      </div>
      <span class="alert alert-light mx-auto mb-4" id="custom-tooltip"
        style="display:none; width:100px;background-color:rgba(199, 196, 196, 0.815)">Copied!</span>
    </div>
  </div>
</div>
</div>