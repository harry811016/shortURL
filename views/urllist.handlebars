<div class="container mt-5">
  <div class="d-flex justify-content-center text-center">
    <table class="table table-hover mt-4" style="width: 550px;">
      <thead>
        <tr class="table-primary">
          <th scope="col">Full URL</th>
          <th scope="col">Short URL</th>
          <th scope="col">Clicks</th>
        </tr>
      </thead>
      <tbody>
        {{#each url}}
        <tr class="table-light">
          <td class="align-middle" style="max-width: 400px"><a style="word-wrap:break-word;"
              href="{{this.urlFull}}">{{this.urlFull}}</a></td>
          <td class="align-middle"><a href="{{this.urlShort}}">{{this.urlShort}}</a></td>
          <td class="align-middle">{{this.click}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>