<!-- ./views/index.handlebars -->
<div class="container mt-4">
  <div class="d-flex justify-content-center text-center">
    <div class="card" style="width: 450px;border:outset">
      <h5 class="card-header font-weight-bold">URL Shortener</h5>
      <div class="card-body">
        <i class="fas fa-link fa-7x" style="color: cadetblue;"></i>
        <form action="/new" method="POST">
          <div class="form-group mt-4">
            <label for="exampleInputurl" class="font-weight-bold">Shorten Your URL!</label>
            <input type="url" class="form-control" id="exampleInputurl" aria-describedby="urlHelp"
              placeholder="Input URL here" name="url" required>
            <small id="emailHelp" class="form-text text-muted">*The short URL format is 5 groups of garbled
              characters.</small>
          </div>
          <button class="btn btn-primary" type="submit" id="create-button">Create</button>
        </form>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center text-center">
    <table class="table table-hover mt-4" style="width: 550px">
      <thead>
        <tr class="table-primary">
          <th scope="col"></th>
          <th scope="col">Full URL</th>
          <th scope="col">Short URL</th>
          <th scope="col">Clicks</th>
        </tr>
      </thead>
      <tbody>
        {{#each url}}
        <tr class="table-light">
          <td>
            <form action="/url/{{ this._id }}?_method=DELETE" method="POST">
              <button class="btn btn-danger text-center rounded-circle" type="submit"
                style="background-color: rgb(226, 74, 57);"><i class="far fa-trash-alt"></i></button>
            </form>
          </td>
          <td><a href="{{this.urlFull}}">{{this.urlFull}}</a></td>
          <td><a href="{{this.urlShort}}">{{this.urlShort}}</a></td>
          <td>{{this.click}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
</div>